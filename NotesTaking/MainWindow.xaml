<Window x:Class="NotesTaking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesTaking"
        mc:Ignorable="d"
        Title=" " 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"  
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        AllowsTransparency="True"
        Background="Transparent"    
        Height="680" Width="1000"
        ResizeMode="NoResize">

    <Border CornerRadius="12" Background="#28282b" >
        <Grid x:Name="LogInForm">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="#343434" RadiusX="11" RadiusY="11" Grid.Column="1" Grid.Row="1">
                <Rectangle.BitmapEffect>
                    <DropShadowBitmapEffect Color="Black" Direction="-40" ShadowDepth="15" Softness="100" Opacity=".45" />
                </Rectangle.BitmapEffect>
            </Rectangle>
            <Ellipse x:Name="btnClose" Grid.Column="2" Margin="0,0,10,0" Fill="#FF343A" StrokeThickness="4" Stroke="#C7282D" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Width="30" MouseLeftButtonDown="btnClose_MouseLeftButtonDown" MouseEnter="btnClose_MouseEnter" MouseLeave="btnClose_MouseLeave"/>
            <Ellipse x:Name="btnMinimize" Grid.Column="2" Margin="0,0,45,0" Fill="#FFBE45" StrokeThickness="4" Stroke="#C79436" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Width="30" MouseLeftButtonDown="btnMinimize_MouseLeftButtonDown" MouseEnter="btnMinimize_MouseEnter" MouseLeave="btnMinimize_MouseLeave"/>
            <Image Margin="39,0,39,218" Source="C:\Users\Chewy\Documents\GitHub\NotesTaking\NotesTaking\Images\notabene.png" Grid.Column="1" Grid.Row="1"/>
            <Label Grid.Column="1" Margin="176,324,176,218" Grid.Row="1">
                <AccessText FontSize="28" FontWeight="Bold" Foreground="WhiteSmoke" Height="46">
                    Log in:
                </AccessText>
            </Label>
            <Button x:Name="btnSignIn" 
        Background="Transparent"
        Grid.Column="1" 
        Margin="105,528,105,10" 
        Grid.Row="1" 
        FontSize="30" 
        FontWeight="Bold"
        BorderThickness="3"
        BorderBrush="#008E70"
        Padding="9">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25
                                "/>
                    </Style>
                </Button.Resources>
                <DockPanel HorizontalAlignment="Stretch">
                    <Image Source="C:\Users\Chewy\Documents\Programming Stuff\C Language\NotaBene\NotaBene\Images\google.png" Stretch="Uniform" Width="31" Margin="-50,0,0,0" RenderTransformOrigin="0,0" Height="28"/>
                    <Label Foreground="#008E70" Content="Google" Margin="40,0,0,0" DockPanel.Dock="Right" FontFamily="badr" FontSize="18" Width="100" Height="36"/>
                </DockPanel>

            </Button>

        </Grid>
    </Border>

</Window>
