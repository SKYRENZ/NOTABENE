<Window x:Class="NotesTaking.MVVM.View.NotePopupWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="NotePopupWindow" Height="680" Width="1000" WindowStartupLocation="CenterScreen"
            Background="Transparent" AllowsTransparency="True" WindowStyle="None" >

    <Border Background="#80000000" CornerRadius="24">
        <!-- Semi-transparent black background -->
        <Border  Background="White" CornerRadius="24" Padding="10,22,10,10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="327">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="23.373"/>
                    <RowDefinition Height="16.587"/>
                </Grid.RowDefinitions>

                <!-- Title TextBox -->
                <TextBox Grid.Row="0" Text="{Binding NoteTitle}" FontWeight="Bold" BorderThickness="0" Background="black" Margin="5,0,5,5" IsReadOnly="True" Height="16" VerticalAlignment="Bottom" />

                <!-- Note Content TextBox with ScrollViewer -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,23" Grid.RowSpan="2">
                    <TextBox Text="{Binding NoteContent}" TextWrapping="Wrap" BorderThickness="0" Background="Transparent" Margin="5" IsReadOnly="True"/>
                </ScrollViewer>

                <!-- Close Button -->
                <Button x:Name="CloseButton" Content="Close" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,10" Click="CloseButton_Click" Grid.RowSpan="2"/>
                <Button x:Name="EditButton" Content="Edit" Grid.Row="2" HorizontalAlignment="Left" Margin="176,10,0,10" Click="EditButton_Click" Grid.RowSpan="2"/>
                <Button x:Name="DeleteButton" Content="Delete" Grid.Row="2" HorizontalAlignment="Left" Margin="281,10,0,10" Click="DeleteButton_Click" Grid.RowSpan="2"/>
                <Button x:Name="ArchiveButton" Content="Archive" Grid.Row="2" HorizontalAlignment="Left" Margin="348,10,0,10" Click="ArhiveButton_Click" Grid.RowSpan="2"/>
            </Grid>
        </Border>
    </Border>
</Window>
