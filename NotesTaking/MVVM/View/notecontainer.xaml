<UserControl x:Class="NotesTaking.MVVM.View.notecontainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="150">

    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" CornerRadius="5" Background="White" Width="150" Height="150">
        <Grid>
            <TextBlock x:Name="NoteTitleTextBlock" Text="{Binding NoteTitle}" FontWeight="Bold" Margin="5,0,0,0"/>
            <TextBlock x:Name="NoteContentTextBlock" Text="{Binding NoteContent}" TextWrapping="Wrap" Margin="5,20,5,5" Visibility="Collapsed"/>
        </Grid>
    </Border>
</UserControl>
