<UserControl x:Class="NotesTaking.MVVM.View.NotesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:view="clr-namespace:NotesTaking.MVVM.View"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Create Note Button -->

        <!-- Notes Display Area with ScrollViewer -->
        <Border Background="#343434" CornerRadius="12" Grid.RowSpan="2"/>
   
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                <ItemsControl x:Name="NotesItemsControl" Margin="0,10,0,0" ItemsSource="{Binding Notes}" Width="533">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <view:NoteContainer/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        <Button Content="Create Note" HorizontalAlignment="Center" Height="30" Width="120" Click="CreateNoteButton_Click" Margin="0,10"/>
    </Grid>
</UserControl>
